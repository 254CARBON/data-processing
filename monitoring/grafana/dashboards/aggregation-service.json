{
  "dashboard": {
    "id": null,
    "title": "Aggregation Service",
    "tags": ["data-processing", "aggregation"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Service Health",
        "type": "stat",
        "targets": [
          {
            "expr": "aggregation_service_health_status",
            "legendFormat": "Health Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Bars Generated",
        "type": "stat",
        "targets": [
          {
            "expr": "aggregation_service_bars_generated_total",
            "legendFormat": "Total Bars"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Bar Generation Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(aggregation_service_bars_generated_total[5m])",
            "legendFormat": "{{interval}}"
          }
        ],
        "yAxes": [
          {
            "label": "Bars/sec",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Time Window Management",
        "type": "graph",
        "targets": [
          {
            "expr": "aggregation_service_active_windows",
            "legendFormat": "{{interval}}"
          }
        ],
        "yAxes": [
          {
            "label": "Active Windows",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 5,
        "title": "OHLC Calculation Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(aggregation_service_processing_duration_seconds_bucket{message_type=\"ohlc_calculation\"}[5m]))",
            "legendFormat": "50th percentile"
          },
          {
            "expr": "histogram_quantile(0.95, rate(aggregation_service_processing_duration_seconds_bucket{message_type=\"ohlc_calculation\"}[5m]))",
            "legendFormat": "95th percentile"
          }
        ],
        "yAxes": [
          {
            "label": "Seconds",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 6,
        "title": "ClickHouse Write Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(aggregation_service_clickhouse_writes_total[5m])",
            "legendFormat": "Writes/sec"
          },
          {
            "expr": "histogram_quantile(0.95, rate(aggregation_service_clickhouse_write_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile write time"
          }
        ],
        "yAxes": [
          {
            "label": "Operations/sec",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16}
      }
    ]
  }
}

